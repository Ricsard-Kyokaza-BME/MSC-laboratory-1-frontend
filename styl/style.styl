@import "/app/node_modules/materialize-css/dist/css/materialize.css";
@import "variables.styl"

* {
  font-family: Arial, Helvetica, sans-serif;
}

h1 {
  color: #369;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 250%;
}
h2, h3 {
  color: #444;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: lighter;
}

body#custom-body {
  font-size responsive 14px 18px
  font-range 320px 1200px
  background-color $dirtyWhite !important
  color $darkText
}

nav {
  height: initial;
  line-height: 40px;
  box-shadow: none;
  background-color: $blue;
}

#menu .navbar-brand {
  padding-bottom: 0;
  padding-top: 0;
}

nav#menu {
  a {
    color: $white;
    text-decoration: none;
    background-color: transparent;

    &:hover, :visited, :active, :focus, :hover {
      color: $white;
      text-decoration: none;
      background-color: transparent;
    }
  }
}

.dashboard {
  &-project-container {
    padding-top 2rem

    [class*='col-'] {
      padding-left 0
      padding-right 0
      margin-bottom 1rem
    }

    .collection {
      border none;
    }
  }

  &-container {
    text-align: center;
    padding 1rem 0 1rem 0
    border 4px solid
    //background-color #AECE38

    &.container-white {
      background-color $white02
      border-color $blue
    }

    &.container-red {
      background-color $red02
      border-color $red
    }

    &.container-yellow {
      background-color $yellow02
      border-color $yellow
    }

    &.container-green {
      background-color $green02
      border-color $green
    }

    & > ul {
      min-height: 50px;
    }

    &-item {
      position relative
      background-color: $white02;
      text-align: left;
      padding: 1rem;
      padding-left 1.5rem
      font-size 14px
      border-top: 1px solid $dirtyWhite;

      &:last-of-type {
        border-bottom: 1px solid $dirtyWhite;
      }

      &-type {
        position absolute
        height 100%
        width 15px
        left 0
        top 0
        font-size 9px
        line-height 15px
        text-align center
        background-color $darkGrey
        color $dirtyWhite
        border-radius 0 5px 5px 0

        writing-mode tb-rl
        white-space:nowrap;
      }
    }
  }
}

