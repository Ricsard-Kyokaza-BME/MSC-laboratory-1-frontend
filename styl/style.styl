  rl-tag-input {
    padding: .5rem .75rem;
    font-size: 1rem;
    line-height: 1.25;
    box-shadow none
    border 1px solid rgba(0,0,0,0.15)
    border-radius 0.25rem
    background-color: rgba(255,255,255,0.5);

    &:active {
