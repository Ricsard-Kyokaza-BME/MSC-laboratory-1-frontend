@import "variables.styl"

* {
  font-family: Arial, Helvetica, sans-serif;
}

h1 {
  color: #369;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 250%;
}
h2, h3 {
  color: #444;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: lighter;
}

body#custom-body {
  font-size responsive 14px 18px
  font-range 320px 1200px
  background-color $dirtyWhite !important
  color $darkText

  .switch label input[type=checkbox]:checked + .lever {
    background-color $blue04

    &:after {
      background-color $blue
    }
  }


  //  Materialize color hacks
  [type="radio"]:checked + label:after, [type="radio"].with-gap:checked + label:after {
    background-color $blue
  }

  [type="radio"]:checked + label:after, [type="radio"].with-gap:checked + label:before, [type="radio"].with-gap:checked + label:after {
    border-color $blue
  }

  input:not([type]):focus:not([readonly]), input[type=text]:focus:not([readonly]),
  input[type=password]:focus:not([readonly]), input[type=email]:focus:not([readonly]),
  input[type=url]:focus:not([readonly]), input[type=time]:focus:not([readonly]),
  input[type=date]:focus:not([readonly]), input[type=datetime]:focus:not([readonly]),
  input[type=datetime-local]:focus:not([readonly]), input[type=tel]:focus:not([readonly]),
  input[type=number]:focus:not([readonly]), input[type=search]:focus:not([readonly]), textarea.materialize-textarea:focus:not([readonly]) {
    border-color $blue
    box-shadow 0 1px 0 0 $blue
  }

  input:not([type]):focus:not([readonly]), input[type=text]:focus:not([readonly]),
  input[type=password]:focus:not([readonly]), input[type=email]:focus:not([readonly]),
  input[type=url]:focus:not([readonly]), input[type=time]:focus:not([readonly]),
  input[type=date]:focus:not([readonly]), input[type=datetime]:focus:not([readonly]),
  input[type=datetime-local]:focus:not([readonly]), input[type=tel]:focus:not([readonly]),
  input[type=number]:focus:not([readonly]), input[type=search]:focus:not([readonly]),
  textarea.materialize-textarea:focus:not([readonly]) {
    border-color $blue
    box-shadow 0 1px 0 0 $blue
  }

  input:not([type]):focus:not([readonly]), input[type=text]:focus:not([readonly]),
  input[type=password]:focus:not([readonly]), input[type=email]:focus:not([readonly]),
  input[type=url]:focus:not([readonly]), input[type=time]:focus:not([readonly]),
  input[type=date]:focus:not([readonly]), input[type=datetime]:focus:not([readonly]),
  input[type=datetime-local]:focus:not([readonly]), input[type=tel]:focus:not([readonly]),
  input[type=number]:focus:not([readonly]), input[type=search]:focus:not([readonly]),
  textarea.materialize-textarea:focus:not([readonly]) {
    border-color $blue
    box-shadow 0 1px 0 0 $blue
  }

  .chips.focus {
    border-color $blue
    box-shadow 0 1px 0 0 $blue
  }

  .chips .chip.selected {
    background-color $blue
  }

  .input-field label {
    left: initial;
  }

  .dropdown-content li > a, .dropdown-content li > span {
    color $blue
  }
}

nav {
  height: initial;
  line-height: 40px;
  box-shadow: none;
  background-color: $blue;
}

#menu .navbar-brand {
  padding-bottom: 0;
  padding-top: 0;
}

nav#menu {
  a {
    color: $white;
    text-decoration: none;
    background-color: transparent;

    &:hover, :visited, :active, :focus, :hover {
      color: $white;
      text-decoration: none;
      background-color: transparent;
    }
  }
}

.dashboard {
  &-project-container {
    margin-top 2rem
    border 2px solid #d1d1d1
    background-color #e2e2e2
    border-radius 15px
    padding 1em 0 1em 0

    .collection {
      border none;
    }
  }

  &-project-title {
    h4 {
    }

    h6 {
      color $grey
      margin-bottom 0
    }

    i {
      cursor pointer
    }
  }

  &-container {
    text-align: center;
    padding 1rem 0 1rem 0
    border 4px solid

    &[class*='col-'] {
      padding-left 0
      padding-right 0
      margin-bottom 1rem
    }

    &.container-white {
      background-color $white02
      border-color $blue
    }

    &.container-red {
      background-color $red02
      border-color $red
    }

    &.container-yellow {
      background-color $yellow02
      border-color $yellow
    }

    &.container-green {
      background-color $green02
      border-color $green
    }

    & > ul {
      min-height: 50px;
    }

    &-item {
      position relative
      background-color: $white02;
      text-align: left;
      padding: 1rem;
      padding-left 1.5rem
      font-size 14px
      border-top: 1px solid $dirtyWhite;

      &:last-of-type {
        border-bottom: 1px solid $dirtyWhite;
      }

      &-type {
        position absolute
        height 100%
        width 15px
        left 0
        top 0
        font-size 9px
        line-height 15px
        text-align center
        background-color $darkGrey
        color $dirtyWhite
        border-radius 0 5px 5px 0

        writing-mode tb-rl
        white-space:nowrap;
      }
    }
  }
}

.create-container {
  margin-top 2rem
}

