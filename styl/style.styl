@import "/app/node_modules/materialize-css/dist/css/materialize.css";

* {
  font-family: Arial, Helvetica, sans-serif;
}

h1 {
  color: #369;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 250%;
}
h2, h3 {
  color: #444;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: lighter;
}

body {
  font-size responsive 14px 18px
  font-range 320px 1200px
}

nav {
  height: initial;
  line-height: 40px;
  box-shadow: none;
  background-color: #3B70A6;
}

#menu .navbar-brand {
  padding-bottom: 0;
  padding-top: 0;
}

nav#menu {
  a {
    color: #FFF;
    text-decoration: none;
    background-color: transparent;

    &:hover, :visited, :active, :focus, :hover {
      color: #FFF;
      text-decoration: none;
      background-color: transparent;
    }
  }
}

.dashboard-main {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: center;
}

.dashboard-container {
  width: 25%;
  /*color: white;*/
  min-width: 300px;
  text-align: center;

  & > ul {
    min-height: 50px;
  }

  &-item {
    background-color: #FFF;
    text-align: left;
  }
}

