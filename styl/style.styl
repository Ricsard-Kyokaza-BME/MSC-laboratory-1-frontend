  }
}

nav {
  height: initial;
  line-height: 40px;
  box-shadow: none;
  background-color: $blue;
}

#menu .navbar-brand {
  padding-bottom: 0;
  padding-top: 0;
}

nav#menu {
  a {
    color: $white;
    text-decoration: none;
    background-color: transparent;

    &:hover, :visited, :active, :focus, :hover {
      color: $white;
      text-decoration: none;
      background-color: transparent;
    }
  }

  .nav-item {
    padding: 0 1rem

    &:last-of-type {
      padding-right 0
    }
  }
}

.dashboard {
  &-grey-box {
    margin-top 2rem
    border 2px solid $lightGreyBorder
    background-color $lightGrey
    border-radius 15px
  }

  &-project-container {
    padding 1em 0 1em 0

    .collection {
      border none;
    }
  }

  &-project-title {
    h6 {
      color $grey
      margin-bottom 0
    }

    i {
      cursor pointer
    }

    &-text {
      cursor pointer
    }

    .item-create-button {
      button {
        display inline-block
        line-height 15px
        vertical-align middle

        i {
          vertical-align middle
        }

        span {
          vertical-align middle
        }
      }

    }
  }

  &-col-container {
    padding-top 1rem
  }

  &-container {
    text-align: center;
    padding 1rem 0 1rem 0
    border 4px solid

    ui-switch {
      zoom: 0.7
      vertical-align sub
    }

    .switch > label {
      font-size 14px
      opacity 0.7
    }

    &[class*='col-'] {
      padding-left 0
      padding-right 0
      margin-bottom 1rem
    }

    &.container-white {
      background-color $white02
      border-color $blue
    }

    &.container-red {
      background-color $red02
      border-color $red
    }

    &.container-yellow {
      background-color $yellow02
      border-color $yellow
    }

    &.container-green {
      background-color $green02
      border-color $green
    }

    & > ul {
      min-height: 50px;
    }

    &-item {
      position relative
      background-color: $white02;
      text-align: left;
      padding: 1rem;
      padding-left 1.5rem
      font-size 14px
      border-top: 1px solid $dirtyWhite;

      &.empty-item {
        cursor pointer
        color rgba($darkText, 0.6)
        text-align center
      }

      &:last-of-type {
        border-bottom: 1px solid $dirtyWhite;
      }

      &-type {
        position absolute
        height 100%
        width 15px
        left 0
        top 0
        font-size 9px
        line-height 15px
        text-align center
        background-color $darkGrey
        color $dirtyWhite
        border-radius 0 5px 5px 0

        writing-mode tb-rl
        white-space:nowrap;
      }
    }
  }
}

.create-container {
  margin-top 2rem
}

.empty-project-list {
  padding 3rem 0 3rem 0
  text-align center
  cursor pointer
  color rgba($darkText, 0.6)
}

.max-1-lines {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; /* number of lines to show */
  line-height: 1.1;        /* fallback */
  max-height: 1.1em;       /* fallback */
}

.max-2-lines {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* number of lines to show */
  line-height: 1.1;        /* fallback */
  max-height: 2.2em;       /* fallback */
}

.max-3-lines {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /* number of lines to show */
  line-height: 1.1;        /* fallback */
  max-height: 3.3em;       /* fallback */
}

