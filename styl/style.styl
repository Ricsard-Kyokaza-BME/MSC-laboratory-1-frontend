@import "variables.styl"

$stepFooterHeight = 50px

* {
  font-family: 'Roboto', Arial, Helvetica, sans-serif;
}

h1 {
  color: #369;
  font-family: 'Roboto', Arial, Helvetica, sans-serif;
  font-size: 250%;
}
h2, h3 {
  color: #444;
  font-family: 'Roboto', Arial, Helvetica, sans-serif;
  font-weight: lighter;
}

body#custom-body {
  font-size responsive 14px 18px
  font-range 320px 1200px
  background-color $dirtyWhite !important
  color $darkText
  font-weight 400

  rl-tag-input {
    padding: .5rem .75rem;
    font-size: 1rem;
    line-height: 1.25;
    box-shadow none
    border 1px solid rgba(0,0,0,0.15)
    border-radius 0.25rem
    background-color: rgba(255,255,255,0.5);

    &:active {
      background-color $white
    }

    &:focus {
      background-color $white
    }

    .ng2-tag-input-item-selected {
      background #DA3C50
    }

    rl-tag-input-item {
      font-size: 14px;
      height: 20px;
      line-height: 20px;

      span {
        font-size: 14px;
        height: 18px;
        line-height: 18px;
        width: 18px;
        background $blue
      }
    }

    input {
      padding 0
      background-color: transparent;
    }
  }

  ul {
    list-style none
    padding 0
  }

  //Bootstrap overrides
  .btn-outline-primary {
    color $blue
    border-color $blue
    cursor pointer
    &:hover {
      color $white
      background-color $blue
      border-color $blue
    }
    &:acitve {
      color $white
      background-color $blue
      border-color $blue
    }
  }

  .btn-primary {
    background-color $blue
    border-color $blue
    cursor pointer
    &:hover {
      color $white
      background-color $blue
      border-color $blue
    }
    &:acitve {
      color $white
      background-color $blue
      border-color $blue
    }
  }
}

form {
  .row {
    margin-bottom 1rem
  }

  .form-control {
    background-color: rgba(255,255,255,0.5);
  }
}

nav {
  height: initial;
  line-height: 40px;
  box-shadow: none;
  background-color: $blue;
}

#menu .navbar-brand {
  padding-bottom: 0;
  padding-top: 0;
}

nav#menu {
  font-weight 300

  a {
    color: $white;
    text-decoration: none;
    background-color: transparent;

    &:hover, :visited, :active, :focus, :hover {
      color: $white;
      text-decoration: none;
      background-color: transparent;
    }
  }

  .nav-item {
    padding: 0 1rem

    &:last-of-type {
      padding-right 0
    }
  }

  .navbar-toggler {
    border none
    &:focus {
      outline none
    }
  }
}

.dashboard {
  &-grey-box {
    margin-top 2rem
    border 2px solid $lightGreyBorder
    background-color $lightGrey
    border-radius 15px
  }

  &-project-container {
    padding 1em 0 1em 0

    .collection {
      border none;
    }
  }

  &-project-title {
    h6 {
      color $grey
      margin-bottom 0
    }

    i {
      cursor pointer
    }

    &-text {
      cursor pointer
    }

    .item-create-button {
      button {
        display inline-block
        line-height 15px
        vertical-align middle

        i {
          vertical-align middle
        }

        span {
          vertical-align middle
        }
      }

    }
  }

  &-col-container {
    padding-top 1rem
  }

  &-container {
    text-align: center;
    padding 1rem 0 1rem 0
    border 4px solid

    ui-switch {
      zoom: 0.7
      vertical-align sub
    }

    .switch > label {
      font-size 14px
      opacity 0.7
    }

    &[class*='col-'] {
      padding-left 0
      padding-right 0
      margin-bottom 1rem
    }

    &.container-white {
      background-color $white02
      border-color $blue
    }

    &.container-red {
      background-color $red02
      border-color $red
    }

    &.container-yellow {
      background-color $yellow02
      border-color $yellow
    }

    &.container-green {
      background-color $green02
      border-color $green
    }

    & > ul {
      min-height: 50px;
    }

    &-item {
      position relative
      background-color: $white02;
      text-align: left;
      padding: 1rem;
      padding-left 1.5rem
      font-size 14px
      border-top: 1px solid $dirtyWhite;

      &.empty-item {
        cursor pointer
        color rgba($darkText, 0.6)
        text-align center
      }

      &:last-of-type {
        border-bottom: 1px solid $dirtyWhite;
      }

      &-type {
        position absolute
        height 100%
        width 15px
        left 0
        top 0
        font-size 9px
        line-height 15px
        text-align center
        background-color $darkGrey
        color $dirtyWhite
        border-radius 0 5px 5px 0

        writing-mode tb-rl
        white-space:nowrap;
      }
    }
  }
}

.create-container {
  margin-top 2rem
  padding-bottom $stepFooterHeight
}

.empty-project-list {
  padding 3rem 0 3rem 0
  text-align center
  cursor pointer
  color rgba($darkText, 0.6)
}

.max-1-lines {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; /* number of lines to show */
  line-height: 1.1;        /* fallback */
  max-height: 1.1em;       /* fallback */
}

.max-2-lines {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* number of lines to show */
  line-height: 1.1;        /* fallback */
  max-height: 2.2em;       /* fallback */
}

.max-3-lines {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /* number of lines to show */
  line-height: 1.1;        /* fallback */
  max-height: 3.3em;       /* fallback */
}

.dnd-drag-start {
  border 2px dashed $blue !important
  border-radius 10px !important
}

.selector-list {
  max-height 200px
  overflow-y auto
  background-color: $white;
  border: 1px solid $lightGreyBorder;
  border-radius: 0 0 5px 5px;
  margin-top: -3px;

  li {
    cursor pointer
    border-bottom 1px solid #eee
    font-size 1rem
    line-height 1.25
    padding 0.5rem

    i {
      font-size: 17px;
      vertical-align: middle;
    }

    &:last-of-type {
      border-bottom none
    }

    &:hover {
      background-color $blue
      color $white
    }
  }
}

.padding-footer-double {
  padding-bottom $stepFooterHeight * 2;
}

.button-footer {
  position: fixed;
  bottom: $stepFooterHeight;
  left: 0;
  right: 0;
  height: $stepFooterHeight;
  background-color $blue
  padding 0.5rem
  color $white
  font-weight 300
}

.step-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: $stepFooterHeight;
  background-color $blue
  padding 0.5rem
  color $white04
  border-color $white04
  font-weight 300

  &-line {
    line-height 2
    i {
      vertical-align middle
    }
  }

  &-step-holder {
    display flex
    align-items center
    justify-content center
  }

  &-step {
    display flex
    align-items center
  }

  &-circle {
    width 24px
    height 24px
    border 2px solid
    border-radius 50%
    position relative
    margin-right 5px

    span {
      position absolute
      left 6px
      top -4px
      font-size 14px
    }
  }

  &-nav {
    color $white
  }

  &-active {
    color $white
    border-color $white
  }
}

